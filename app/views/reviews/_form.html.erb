<h1>Create a new review</h1>

<div class="container">
  <%= simple_form_for [restaurant, review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Save this review", class: "btn btn-primary" %>
    <%= link_to "Cancel", root_path, class: 'btn btn-primary' %>
  <% end %>
</div>
